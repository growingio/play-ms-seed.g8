<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="30" status="warn" packages="org.apache.logging.log4j.core,net.kencochrane.raven.log4j2">

    <Properties>
        <Property name="log-path">logs</Property>
        <Property name="serverName">$name$</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%coloredLevel %logger{15} - %message%n%xException{10}"/>
        </Console>

        <RollingFile name="ACCESS_FILE" fileName="\${log-path}/access.log"
                     filePattern="\${log-path}/access-log-%d{yyyy-MM-dd}.gz">
            <PatternLayout pattern="%message%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

        <RollingFile name="APPLICATION_FILE" fileName="\${log-path}/application.log"
                     filePattern="\${log-path}/application-log-%d{yyyy-MM-dd}.gz">
            <PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} \${serverName} [%level] from %logger in %thread - %message%n%xException"/>

            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="io.growing" level="TRACE" additivity="false">
            <appender-ref ref="APPLICATION_FILE"/>
        </Logger>

        <Logger name="access" level="TRACE" additivity="false">
            <appender-ref ref="ACCESS_FILE"/>
        </Logger>

        <Root level="WARN" additivity="false">
            <appender-ref ref="APPLICATION_FILE"/>
        </Root>
    </Loggers>
</configuration>